        <RelativePanel HorizontalAlignment="Left" Height="590" Margin="25,100,0,0" VerticalAlignment="Top" Width="1230" BorderBrush="White" BorderThickness="20" Background="Green" Opacity="0.78">
           

        </RelativePanel>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="73,345,0,0" Text="" VerticalAlignment="Top" Width="370" PlaceholderText="Unesite prezime"/>
        <TextBox HorizontalAlignment="Left" Height="40" Margin="76,272,0,0" Text="" VerticalAlignment="Top" Width="365" PlaceholderText="Unesite ime"/>
            <TextBox HorizontalAlignment="Left" Height="40" Margin="77,423,0,0" Text="" VerticalAlignment="Top" Width="370" PlaceholderText="Adresa stanovanja"/>
            <TextBox HorizontalAlignment="Left" Height="40" Margin="77,503,0,0" Text="" VerticalAlignment="Top" Width="370" PlaceholderText="Broj telefona/mobitela" InputScope="TelephoneNumber"/>
            <TextBox HorizontalAlignment="Left" Height="40" Margin="836,273,0,0" Text="" VerticalAlignment="Top" Width="375" PlaceholderText="Korisnicko ime" RenderTransformOrigin="0.66,0.645"/>
