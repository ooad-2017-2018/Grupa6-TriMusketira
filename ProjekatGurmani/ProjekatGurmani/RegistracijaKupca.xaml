        <PasswordBox HorizontalAlignment="Left" Height="45" Margin="839,417,0,0" VerticalAlignment="Top" Width="370" PlaceholderText="Sifra"/>
            <Button BorderBrush="White" BorderThickness="4" Content="Registrujte se" HorizontalAlignment="Stretch" Height="50" VerticalAlignment="Top" Margin="425,603,425,0" Background="Green" Foreground="#FFF8F9F7" FontSize="24" FontWeight="Bold"/>
            <TextBlock HorizontalAlignment="Left" Height="45" Margin="462,572,0,0" Text="Registrovanjem prihvatite" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" Foreground="#FFF0E4E4"/>
            <HyperlinkButton Content="uslove i pravila koristenja" HorizontalAlignment="Left" Height="35" Margin="641,565,0,0" VerticalAlignment="Top" Width="170" Foreground="#FFFF3414" FontFamily="Segoe UI"/>
        <PasswordBox HorizontalAlignment="Left" Height="45" Margin="847,497,0,0" VerticalAlignment="Top" Width="357" PlaceholderText="Sifra"/>

        <RelativePanel HorizontalAlignment="Left" Height="195" Margin="362,27,0,0" VerticalAlignment="Top" Width="455">
            <RelativePanel.Background>
                <ImageBrush Stretch="Fill" ImageSource="Slike/GurmaniLogo.png"/>
            </RelativePanel.Background>
            <RelativePanel HorizontalAlignment="Left" Height="0" VerticalAlignment="Top" Width="0"/>
        </RelativePanel>
        <FlipView HorizontalAlignment="Left" Height="195.2" VerticalAlignment="Top" Width="0"/>
        <Ellipse HorizontalAlignment="Left" Height="95" Margin="-256,123,0,0" VerticalAlignment="Top" Width="605" Fill="White" Stroke="#FF0DAA15"  />
        <RelativePanel HorizontalAlignment="Left" Height="74" Margin="5,132,0,0" VerticalAlignment="Top" Width="99" RenderTransformOrigin="1.12,0.52">
            <RelativePanel.Background>
                <ImageBrush Stretch="Fill" ImageSource="Slike/BackIcon.png"/>
            </RelativePanel.Background>
        </RelativePanel>
        <TextBlock HorizontalAlignment="Left" Height="60" Margin="118,145,0,0" Text="Registracija" TextWrapping="Wrap" VerticalAlignment="Top" Width="327" FontSize="36" FontWeight="Bold"  Foreground="#FF0F9115"/>
     

    </Grid>
