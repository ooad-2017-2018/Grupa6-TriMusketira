            <RichEditBox HorizontalAlignment="Left" Height="123" VerticalAlignment="Top" Width="382" Margin="43,130,-361,-221"/>
            <RelativePanel HorizontalAlignment="Left" Height="171" VerticalAlignment="Top" Width="171" Margin="0,0,-171,-171"/>
            <RelativePanel HorizontalAlignment="Left" Height="172" VerticalAlignment="Top" Width="180" BorderBrush="White" BorderThickness="5" Background="Green" Margin="489,130,-669,-302"/>
            <TextBox Height="48" Text="UKUPNO: " InputScope="CurrencyAmount" FontSize="20" FontStretch="ExtraExpanded" VerticalAlignment="Center" Margin="683,28,-1101,-43.2" RenderTransformOrigin="0.493,0.838" />
            <PersonPicture HorizontalAlignment="Left" VerticalAlignment="Top" Margin="163,15,-162.8,0" Height="75"/>
            <TextBox HorizontalAlignment="Left" FontSize="15" Height="48" VerticalAlignment="Top" Width="343" Margin="252,27,-524.6,-44.6" PlaceholderText="Korisnicko ime"/>
            <RelativePanel HorizontalAlignment="Left" IsTapEnabled="False" Height="347" VerticalAlignment="Bottom" Width="335" Margin="744,0,-1079,-459" BorderBrush="White" BorderThickness="5" Background="Green">
                <Image HorizontalAlignment="Left" Height="66" VerticalAlignment="Top" Width="99" Source="Slike/Visa.png" Margin="10.2,77.2,-109.2,-141.6"/>
                <Image HorizontalAlignment="Left" Height="68" VerticalAlignment="Top" Width="86" Source="Slike/Maestro.png" Margin="121.2,78.2,-205.6,-144.6" RenderTransformOrigin="0.552,1.933"/>
