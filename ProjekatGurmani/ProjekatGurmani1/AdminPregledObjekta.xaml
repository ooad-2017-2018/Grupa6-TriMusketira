        <Button Content="Deaktiviraj" HorizontalAlignment="Left" Margin="737,540,0,0" VerticalAlignment="Top" Height="75" Width="293" Background="#FFEEE9E9" FontSize="24"/>
        <Button Content="Nazad" HorizontalAlignment="Left" Margin="977,852,0,0" VerticalAlignment="Top" Height="91" Width="463" Background="#FFEEE9E9" FontSize="36"/>
        <TextBox HorizontalAlignment="Left" Margin="725,40,0,0" Text="" VerticalAlignment="Top" Height="82" Width="89" Background="#FFF7F6F6" FontSize="36" IsReadOnly="True"/>
        <TextBox HorizontalAlignment="Left" Margin="45,380,0,0" Text="" VerticalAlignment="Top" Height="60" Width="545" Background="#FFF7F6F6" FontSize="36" IsReadOnly="True" PlaceholderText="Jela"/>
        <ListView HorizontalAlignment="Left" Height="155" Margin="45,480,0,0" VerticalAlignment="Top" Width="555" Background="#B2FFFFFF"/>
        <Image HorizontalAlignment="Left" Height="70" Margin="50,50,0,0" VerticalAlignment="Top" Width="140" Source="Slika/BackIcon.png"/>

